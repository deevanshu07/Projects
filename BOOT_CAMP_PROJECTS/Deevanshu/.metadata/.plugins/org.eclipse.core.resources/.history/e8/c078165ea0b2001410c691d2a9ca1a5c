import java.util.ArrayList;


public class MenuClass 
{
	
	
	static ArrayList<itemClass> orderCart = new ArrayList <itemClass>();
		
		static
		{	
			
			
			itemClass item1= new itemClass(1,"Pizza",10,30);
			orderCart.add(item1);
			itemClass item2=new itemClass(2,"Burger",10,40);
			orderCart.add(item2);
			itemClass item3=new itemClass(3,"Beer",30,60);
			orderCart.add(item3);
		}		
		 void display()
		{
				for (int i = 0; i < orderCart.size(); i++) 
				{
						System.out.print(orderCart.get(i).getItemId()+"\t");
						
						System.out.println(orderCart.get(i).getItemName()+"\t");
				
						System.out.println(orderCart.get(i).getItemPrepTime()+"\t");
						
				}
			
		
			}
	


}
